{
  "type": "module",
  "private": true,
  "dependencies": {
    "automation-framework": "github:ausp1c1ousqw/automation-framework"
  },
  "devDependencies": {
    "@cucumber/cucumber": "^12.2.0",
    "@wdio/cli": "^8.35.0",
    "@wdio/cucumber-framework": "^9.20.0",
    "@wdio/junit-reporter": "^9.20.0",
    "@wdio/local-runner": "^8.35.0",
    "@wdio/selenium-standalone-service": "^8.14.0",
    "@wdio/spec-reporter": "^8.35.0",
    "chromedriver": "^142.0.0",
    "cross-env": "^10.1.0",
    "npm-run-all": "^4.1.5",
    "allure-commandline": "^2.24.1"
  },
  "scripts": {
    "test": "wdio run ./config/wdio.conf.js",
    "allure:generate": "allure generate ./artifacts/allure-results --clean -o ./artifacts/allure-report",
    "allure:open": "allure open ./artifacts/allure-report",
    "allure:clean": "rm -rf ./artifacts/allure-results ./artifacts/allure-report",
    "test-and-allure": "npm-run-all --continue-on-error --serial test allure:generate allure:open",
    "artifacts:clean": "rm -rf ./artifacts"
  }
}
